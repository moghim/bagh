<web-app version="2.4"
 xmlns="http://java.sun.com/xml/ns/j2ee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" >
	<servlet>
		<servlet-name>FrontController</servlet-name>
		<servlet-class>ir.ac.ut.ieproj.controller.FrontController</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>FrontController</servlet-name>
		<url-pattern>*.action</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>		
		<welcome-file>student-login.jsp</welcome-file>
	</welcome-file-list>
	
	<context-param>
    	<param-name>user</param-name>
    	<param-value>root</param-value>
	</context-param>
	
	<context-param>
    	<param-name>password</param-name>
    	<param-value>123</param-value>
	</context-param>
		<error-page>
		<error-code>403</error-code>
		<location>/access-err.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/notfound.jsp</location>
	</error-page>

	<!-- Security Constraints -->

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>prof</web-resource-name>
			<url-pattern>/professor-main.jsp</url-pattern>
			<url-pattern>/student-login.jsp</url-pattern>
			<url-pattern>/submit-grade.jsp</url-pattern>
			<url-pattern>/submit-grade-list.jsp</url-pattern>
			<url-pattern>/withdraw-response.jsp</url-pattern>
			<url-pattern>/withdraw-response-list.jsp</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>prof</role-name>
		</auth-constraint>
	</security-constraint>
	
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>student</web-resource-name>
			<url-pattern>/student-login.jsp</url-pattern>
			<url-pattern>/course-select.jsp</url-pattern>
			<url-pattern>/student-main.jsp</url-pattern>
			<url-pattern>/withdraw.jsp</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>stu</role-name>
		</auth-constraint>
	</security-constraint>
	
	<!-- Login config -->
	
	<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/student-login.jsp</form-login-page>
			<form-error-page>/login-error.jsp</form-error-page>
		</form-login-config>
	</login-config>
	
	<!-- Security Roles -->
	
	<security-role>
		<role-name>stu</role-name>
	</security-role>
	<security-role>
		<role-name>prof</role-name>
	</security-role>
</web-app>